{
  "name": "@sap/ux-cds-compiler-facade",
  "version": "1.14.1",
  "description": "SAP Fiori tools - CDS compiler facade",
  "publisher": "SAPSE",
  "main": "dist/index.js",
  "author": "SAP SE",
  "license": "SEE LICENSE IN LICENSE",
  "private": false,
  "scripts": {
    "build": "npm-run-all -l clean compile",
    "compile": "tsc --build ./tsconfig.build.json",
    "clean": "rimraf -g ./reports ./dist *.tsbuildinfo",
    "format:fix": "prettier --write",
    "format:fix:all": "prettier --write '**/*.{css,scss,html,js,json,ts,tsx,yaml,yml}' '!**/{out,dist,typings,node_modules}/**' '!**/*.{svg,png,xml}'",
    "lint": "eslint . --ext .ts,.tsx",
    "lint:fix": "eslint --fix",
    "lint:fix:all": "eslint . --ext .ts,.tsx --fix",
    "lint:report": "eslint . --ext .ts,.tsx -f multiple ",
    "lint:summary": "eslint . --ext .ts,.tsx -f summary",
    "madge": "madge --warning --circular --extensions ts ./",
    "pre-commit": "lint-staged --quiet",
    "pre-push": "npm-run-all -l build test",
    "test": "jest --maxWorkers=2",
    "watch": "tsc  --build ./ -watch",
    "xmake:build": "npm-run-all -l lint:report build madge test",
    "bump": "npm version patch --no-commit-hooks --no-git-tag-version --force --no-commit"
  },
  "dependencies": {
    "@sap/cds-compiler": "4.8.0"
  },
  "peerDependencies": {
    "@sap-ux/project-access": ">=1.26.3",
    "@sap-ux/odata-annotation-core": ">=0.1.8",
    "@sap-ux/odata-annotation-core-types": ">=0.3.1"
  },
  "devDependencies": {
    "@commitlint/cli": "19.3.0",
    "@commitlint/config-conventional": "19.2.2",
    "@sap-ux/cds-annotation-parser": "0.1.13",
    "@sap-ux/project-access": "1.26.3",
    "@sap-ux/odata-annotation-core": "0.1.8",
    "@sap-ux/odata-annotation-core-types": "0.3.1",
    "@sap/cds": "7.8.1",
    "@types/jest": "29.2.6",
    "@types/jest-specific-snapshot": "0.5.9",
    "@types/rimraf": "3.0.0",
    "@typescript-eslint/eslint-plugin": "6.9.0",
    "@typescript-eslint/parser": "6.9.0",
    "eslint": "7.32.0",
    "eslint-config-prettier": "8.10.0",
    "eslint-formatter-multiple": "2.0.0",
    "eslint-plugin-eslint-comments": "3.2.0",
    "eslint-plugin-import": "2.29.1",
    "eslint-plugin-prettier": "3.4.1",
    "eslint-plugin-sonarjs": "0.21.0",
    "husky": "3.0.9",
    "jest": "29.5.0",
    "jest-config": "29.5.0",
    "jest-environment-node": "29.5.0",
    "jest-extended": "3.2.3",
    "jest-junit": "15.0.0",
    "jest-scss-transform": "1.0.3",
    "jest-sonar-reporter": "2.0.0",
    "jest-specific-snapshot": "8.0.0",
    "lint-staged": "9.4.2",
    "madge": "4.0.2",
    "npm-run-all2": "6.1.2",
    "prettier": "2.5.1",
    "rimraf": "5.0.7",
    "ts-jest": "29.1.1",
    "typescript": "5.2.2"
  },
  "files": [
    "dist/",
    "types/"
  ],
  "engines": {
    "node": ">=18.16.0"
  },
  "jestSonar": {
    "reportPath": "reports/test/unit",
    "reportFile": "test-report.xml"
  },
  "eslint-formatter-multiple": {
    "formatters": [
      {
        "name": "stylish",
        "output": "console"
      },
      {
        "name": "json",
        "output": "file",
        "path": "reports/lint/eslint.json"
      },
      {
        "name": "checkstyle",
        "output": "file",
        "path": "reports/lint/eslint.checkstyle.xml"
      }
    ]
  }
}